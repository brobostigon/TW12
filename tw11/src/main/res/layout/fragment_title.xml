                android:text="@string/chr_name"
                android:layout_width="111dp"
                android:layout_height="39dp"
                android:id="@+id/textView7"
                android:textSize="14sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
