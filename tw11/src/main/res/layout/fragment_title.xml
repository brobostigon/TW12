                android:id="@+id/editText6" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintHorizontal_bias="0.873" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editText3"
                android:autofillHints="CON"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/cha"
                android:ems="10"
                android:id="@+id/editText5" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView"
